<%- include header %>

<div class="container " style="padding-top:70px;" ng-controller="IndexCtrl">
	<div class="row">
	  <div class="col-md-2">
	  	<div class="list-group">
        <a href="#" class="list-group-item active">Link</a>
        <a href="#" class="list-group-item">Link</a>
        <a href="#" class="list-group-item">Link</a>
